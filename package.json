{
	"name": "appa",
	"displayName": "appa",
	"description": "VSCode extension for Appalachia Interactive development.",
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"author": {
		"name": "Appaclachia Interactive"
	},
	"activationEvents": [
		"onCommand:appa.helloWorld"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "appa.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"icon": "media/icon.png",
	"files": [
		"appa.vsix",
		"media/icon.png"
	],
	"publisher": "appalachia",
	"publishConfig": {
		"registry": "http://localhost:4873/"
	},
	"repository": {
		"url": "https://github.com/AppalachiaInteractive/com.appalachia.vscode.appa.git",
		"type": "git"
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"preversion": "bash ~/com.appalachia/appa/appa package preversion",
		"version": "bash ~/com.appalachia/appa/appa package version",
		"postversion": "sh ~/com.appalachia/appa/appa package postversion",
		"prepublishOnly": "~",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"ts-loader": "^8.0.14",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"vsce": "^1.87.1"
	}
}
